FLAGS=-lSDL -lSDL_image -lSDL_mixer -std=c++11 -Wall -static-libstdc++

all: tanktest

tanktest: tanktest.cpp tank.h object.h sprite.o oursdllib.o bullet.h boom.h block.h scene.h gamescene.h menuscene.h
	g++ -o tanktest tanktest.cpp sprite.o oursdllib.o `sdl-config --libs` -I/usr/include/SDL_image -I/usr/include/SDL_mixer -L/usr/local/lib -lSDL_image -lSDL_mixer
	cp ./pics/* .

%.o: %.cpp %.h
	g++ -c $< $(FLAGS) -o $@

clean:
	rm -f *.o tanktest
	rm -f *.png *.bmp
